{
  "type": "object",
  "comment": "Login",
  "properties": {
    "username": {
      "type": "string",
      "label": "username",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "#txtAccount",
      "control": "text"
    },
    "password": {
      "type": "string",
      "label": "password",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "#txtPassword",
      "control": "text"
    },
    "submit": {
      "type": "action",
      "parameters": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "selector": "#btnLogin",
      "control": "action.button"
    },
    "isLogin": {
      "type": "identifier",
      "label": "errorMessage",
      "update": {
        "type": "none"
      },
      "selector": "#btnLogin[value=\"LOGIN\"]",
      "control": "exists"
    }
  },
  "connect": [
    {
      "match": [
        "errorMessage",
        "isLogin"
      ],
      "screens": [
        "login"
      ]
    }
  ]
}
